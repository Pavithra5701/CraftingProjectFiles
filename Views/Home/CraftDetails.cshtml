@{
    ViewBag.Title = "Craft Details";
    string craft = ViewBag.CraftName as string;
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
    }

    .material-section {
        margin: 20px;
    }

        .material-section img {
            width: 250px;
            height: 200px;
            margin-right: 15px;
            border-radius: 10px;
            box-shadow: 2px 2px 8px #888;
        }

    .buy-btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 18px;
    }

        .buy-btn:hover {
            background-color: #45a049;
        }
</style>

<div class="material-section">
    <h2 style="text-align: center;">@craft</h2>

    @if (craft == "Paper Craft")
    {
        <h4 style="text-align: center;">Materials Needed:</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div style="width: 30%; text-align: center;">
                <p>Origami Papers</p>
                <img src="/images/paper.jpg" alt="Origami Papers" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Scissors</p>
                <img src="/images/paper.jpg" alt="Scissors" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Glue Stick</p>
                <img src="/images/paper.jpg" alt="Glue Stick" style="width: 100%; height: auto;" />
            </div>
        </div>

        <h4 style="text-align: center;">Tutorial Video:</h4>
        <div style="text-align: center;">
            <a href="https://youtu.be/sCf7Q4zGP6g?si=KeHEkZtff0CW8ivg" target="_blank">
                <img src="/images/paper.jpg" alt="Watch Tutorial" style="width: 40%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
            </a>
        </div>

    }

    @if (craft == "Bottle Craft")
    {
        <h4 style="text-align: center;">Materials Needed:</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div style="width: 30%; text-align: center;">
                <p>Glass Bottle</p>
                <img src="/images/bottle.jpg" alt="Glass Bottle" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Paints</p>
                <img src="/images/bottle.jpg" alt="Paints" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Brushes</p>
                <img src="/images/bottle.jpg" alt="Brushes" style="width: 100%; height: auto;" />
            </div>
        </div>

        <h4 style="text-align: center;">Tutorial Video:</h4>
        <div style="text-align: center;">
            <a href="https://youtu.be/wsD1mrHnCmw?si=I3BUflAUgBtVxfLz" target="_blank">
                <img src="/images/bottle.jpg" alt="Watch Tutorial" style="width: 40%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
            </a>
        </div>
    }

    @if (craft == "Fiber Craft")
    {
        <h4 style="text-align: center;">Materials Needed:</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div style="width: 30%; text-align: center;">
                <p>Yarn/Fiber</p>
                <img src="/images/fibre.jpg" alt="Yarn/Fiber" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Scissors</p>
                <img src="/images/fibre.jpg" alt="Scissors" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Glue</p>
                <img src="/images/fibre.jpg" alt="Glue" style="width: 100%; height: auto;" />
            </div>
        </div>

        <h4 style="text-align: center;">Tutorial Video:</h4>
        <div style="text-align: center;">
            <a href="https://youtu.be/1iwBMBseouM?si=ex92bZIsCuzHkSNf" target="_blank">
                <img src="/images/fibre.jpg" alt="Watch Tutorial" style="width: 40%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
            </a>
        </div>
    }

    @if (craft == "Clay")
    {
        <h4 style="text-align: center;">Materials Needed:</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div style="width: 30%; text-align: center;">
                <p>Modeling Clay</p>
                <img src="/images/clay.jpg" alt="Modeling Clay" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Tools Set</p>
                <img src="/images/clay.jpg" alt="Tools Set" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Acrylic Paints</p>
                <img src="/images/clay.jpg" alt="Acrylic Paints" style="width: 100%; height: auto;" />
            </div>
        </div>

        <h4 style="text-align: center;">Tutorial Video:</h4>
        <div style="text-align: center;">
            <a href="https://youtu.be/noiUT2m87AI?si=u7VDJv6YGyCW3lOa" target="_blank">
                <img src="/images/clay.jpg" alt="Watch Tutorial" style="width: 40%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
            </a>
        </div>
    }

    @if (craft == "Basket Weaving")
    {
        <h4 style="text-align: center;">Materials Needed:</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div style="width: 30%; text-align: center;">
                <p>Natural Fibers/Reeds</p>
                <img src="/images/basket.jpg" alt="Natural Fibers/Reeds" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Scissors</p>
                <img src="/images/basket.jpg" alt="Scissors" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Glue</p>
                <img src="/images/basket.jpg" alt="Glue" style="width: 100%; height: auto;" />
            </div>
        </div>

        <h4 style="text-align: center;">Tutorial Video:</h4>
        <div style="text-align: center;">
            <a href="https://youtu.be/fz4LC20wbdI?si=EV7i4Yy0KjhVVwGL" target="_blank">
                <img src="/images/basket.jpg" alt="Watch Tutorial" style="width: 40%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
            </a>
        </div>
    }


    @if (craft == "Teddy Bear Making")
    {
        <h4 style="text-align: center;">Materials Needed:</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div style="width: 30%; text-align: center;">
                <p>Soft Fabric</p>
                <img src="/images/teddy.jpg" alt="Soft Fabric" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Needle & Thread</p>
                <img src="/images/teddy.jpg" alt="Needle & Thread" style="width: 100%; height: auto;" />
            </div>
            <div style="width: 30%; text-align: center;">
                <p>Stuffing Cotton</p>
                <img src="/images/teddy.jpg" alt="Stuffing Cotton" style="width: 100%; height: auto;" />
            </div>
        </div>

        <h4 style="text-align: center;">Tutorial Video:</h4>
        <div style="text-align: center;">
            <a href="https://youtu.be/_VymVayMPVI?si=3Wa4jV5BKjVdd4Y9" target="_blank">
                <img src="/images/teddy.jpg" alt="Watch Tutorial" style="width: 40%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
            </a>
        </div>
    }



    <br />
    <a href="https://wa.me/6374586390?text=I want to buy materials for @craft" target="_blank" class="buy-btn">Buy Now</a>
</div>
